# ===================================================================
# SECURE AI AGENT - CONFIGURATION FILE
# ===================================================================
# All values are configurable via this .env file
# Copy this file to .env and update with your values
# ===================================================================

# ===== API KEYS =====
GEMINI_API_KEY=your-gemini-api-key-here

# ===== MODEL CONFIGURATION =====
MODEL_NAME=gemini-2.0-flash-exp
MODEL_TEMPERATURE=0.0
MAX_TOKENS=2048

# ===== SECURITY THRESHOLDS =====
# Risk scores range from 0.0 (safe) to 1.0 (dangerous)
RISK_THRESHOLD_BLOCK=0.8
RISK_THRESHOLD_SANITIZE=0.5
RISK_THRESHOLD_MONITOR=0.3

# ===== PERFORMANCE SETTINGS =====
MAX_CONTEXT_LENGTH=10000
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=logs/security.log
ENABLE_METRICS=true

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===== DATABASE =====
DB_TYPE=sqlite
DB_PATH=data/security.db

# ===== LARGE PROMPT DEFENSE =====
# Tier options: free, starter, pro, enterprise
TIER=free
MAX_CHAR_LIMIT=50000
MAX_TOKEN_LIMIT=2000

# ===== ENVIRONMENT =====
ENVIRONMENT=development
DEBUG=false

# ===================================================================
# NOTES:
# - Boolean values: true/false (lowercase)
# - Numeric values: no quotes needed
# - String values: quotes optional
# - Comments: lines starting with #
# ===================================================================

# ===== TIER LIMITS REFERENCE =====
# free:       50K chars,  2K tokens,  10 req/s
# starter:   200K chars,  8K tokens, 100 req/s
# pro:       500K chars, 16K tokens, 500 req/s
# enterprise: 1M chars, 32K tokens, 1K req/s
# ===================================================================
