# ============================================================
# Secure AI Agent - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git (it contains secrets!)

# ===== API Keys =====
# Your Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# ===== Model Configuration =====
# Use MockGeminiClient (true) or real Gemini API (false)
# Set to true for testing without API costs, false for production
USE_MOCK_GEMINI=false

# Gemini model to use
MODEL_NAME=gemini-2.0-flash-exp

# Model temperature (0.0 = deterministic, 1.0 = creative)
MODEL_TEMPERATURE=0.7

# Maximum tokens in response
MAX_TOKENS=2048

# ===== Security Thresholds =====
# Risk score threshold to block requests (0.0-1.0)
RISK_THRESHOLD_BLOCK=0.8

# Risk score threshold to sanitize input (0.0-1.0)
RISK_THRESHOLD_SANITIZE=0.5

# Risk score threshold to monitor requests (0.0-1.0)
RISK_THRESHOLD_MONITOR=0.3

# ===== Performance Settings =====
# Maximum context length in characters
MAX_CONTEXT_LENGTH=10000

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# ===== Logging Configuration =====
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Path to security log file
LOG_FILE=logs/security.log

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# ===== Rate Limiting =====
# Maximum requests per time window
RATE_LIMIT_REQUESTS=100

# Time window for rate limiting (seconds)
RATE_LIMIT_WINDOW_SECONDS=60

# ===== Length Validator =====
# Service tier (free, starter, pro, enterprise)
TIER=free

# Maximum characters allowed in input
MAX_CHAR_LIMIT=50000

# Maximum tokens allowed in input
MAX_TOKEN_LIMIT=2000

# ===== Environment =====
# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# ===== Database (for future use) =====
# Database type (sqlite, postgresql)
DB_TYPE=sqlite

# Path to database file
DB_PATH=data/security.db

# ============================================================
# Quick Start Examples:
# ============================================================

# For Testing (no API costs):
# USE_MOCK_GEMINI=true
# GEMINI_API_KEY=not-needed-for-mock

# For Production (real Gemini):
# USE_MOCK_GEMINI=false
# GEMINI_API_KEY=your-actual-api-key

# For Kaggle Submission (MUST use real Gemini):
# USE_MOCK_GEMINI=false
# GEMINI_API_KEY=your-actual-api-key
# ENVIRONMENT=production

